@model IEnumerable<BusinessServiceTracking.Models.TechnologyService>

@{
    ViewBag.Title = "Allocations";
}

<h2>Allocations</h2>



<table class="table">
    <tr>
        <th>
            @Html.Label("Technology Service")
        </th>
        <th>
            @Html.Label("Total Cost")
        </th>


        <th></th>
    </tr>

    @{int counter = 0;}

    @{string[] mylist = new string[ViewBag.Collection.Count]; }



    @foreach (var item in ViewBag.Collection)
    {
        mylist[counter] = item;

        counter++;
    }

    @{int internalCounter = 0;}

        @for (int i = 0; i < counter / 2; i++)
        {


        <tr>
            <td>

                @Html.Raw(mylist[internalCounter])

               
               


            </td>
            <td>

                @{decimal dec = decimal.Parse(mylist[internalCounter + 1]);
                }

                @string.Format("{0:C}", dec)






            </td>

        </tr>

            internalCounter = internalCounter + 2;

        }

</table>






